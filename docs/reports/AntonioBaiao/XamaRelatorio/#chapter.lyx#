	on(wipeInButton, "click", function(evt) {
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

		fx.wipeIn({ 					
\end_layout

\begin_layout Plain Layout

			node : wipeTarget
\end_layout

\begin_layout Plain Layout

		}).play();
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

	});
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

});
\end_layout

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

