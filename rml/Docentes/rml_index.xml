	<stylesheet>
		<!-- Conatins the style information for the document. -->
		<blockTableStyle id="avedoTable">
			<blockValign value="TOP" />
			<blockTopPadding length="2" />
			<blockBottomPadding length="2" />
			<blockLeftPadding length="3" />
			<blockRightPadding length="3" />
