	<story>
		<para style="style.centered">
			<font size="12">Ano Letivo {{ano}}</font>
		</para>
		
		<para style="style.centered">
			{{tituloReport}} {{user_name}}
			<!-- <font size="6" color="#3b5b86">....</font> -->
		</para>
		<spacer length="1cm"/>
		
		
		<blockTable repeatRows="1" {%if tipoReport == "0"%}
										style="distroTable"
									{%else%}
										style="distroTable_1"
									{%endif%}>
			<tr>
				{%for header in listaHeaders%}
					<td align="center">{{header}}</td>
				{%endfor%}
			</tr>
			{%for lines in listaLines%}
				<tr>
					{%for line in lines%}
						<td>{{line}}</td>
					{%endfor%}
				</tr>
			{%endfor%}
		</blockTable>
		
		<!-- <setNextTemplate name="contentPage" /> -->
		<nextFrame />
		
	</story>
